<%= simple_form_for(flat) do |f| %>
  <%= f.input :name, as: :string, placeholder: 'ex: luxury Mansion in the countryside' %>
  <%= f.input :description, as: :text, placeholder: 'write description of your stay' %>
  <%= f.input :home_type, collection: ['cottage', 'house', 'villa', 'flat', 'studio'], prompt: 'select the type of accomodation' %>
  <%= f.input :occupancy, collection: Array(1..20), prompt: "set max occupancy" %>
  <%= f.input :number_of_bedrooms, collection: Array(1..20), prompt: "set number of bedrooms" %>
  <%= f.input :number_of_bathrooms, collection: Array(1..20), prompt: "set number of bathrooms" %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  
  
  <%= f.input :wifi, as: :boolean %>
  <%= f.input :garden, as: :boolean %>
  <%= f.input :hot_tub, as: :boolean %>
  <%= f.input :parking, as: :boolean %>
  <%= f.input :kitchen, as: :boolean %>
  <%= f.input :aircon, as: :boolean %>
  <%= f.input :heating, as: :boolean %>
 
  
